                      
  <!DOCTYPE html>
  <html>
    <head>
        <meta charset="utf-8" />
        <meta name="viewport" content="width=device-width, initial-scale=1.0" />
        <title>@ViewData["Title"] - IdSoftware</title>
        <link rel="stylesheet" href="~/css/site.css" />
        <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.css" />

        <style>
            .navbar{ background:rgb(43, 48, 116);}
  .nav-link{ margin-right: 1em !important;}
  .navbar-collapse{ justify-content: flex-end;}
  .header{ 
    width: 100%; 
    margin-top: 3rem;
    background-image: url('../imagens/technology-background.jpg');
    background-size:  auto;
    background-position: center;}
.descricao { padding: 5em; }
.descricao h1{ color: rgb(43, 48, 116); font-weight: bolder; }
.descricao p{ font-size: 20px; line-height: 1.5; }
.descricao button{ border:1px solid #F97300; background:#F97300; color:#fff; }
.sobre{ padding: 1em; position: relative; background-color: #F9F9FA;}
  .sobre h1{ color:#283074; margin: 2em; }
  .sobre .desc{padding: 2em; border-left:4px solid #283074; }
  .portfolio{ margin: 4em 0;  position: relative; }
  .portfolio h1{color: #283074; margin: 2em;}
  .portfolio .card{ box-shadow: 0 0 20px #ccc; }
  .portfolio .card img{ width: 100%; height: 12em;  }
  .contato{ margin: 6em 0; padding: 2em; position: relative;  background-color: #F9F9FA;}
  .contato h1{padding:2em 1px; color: #283074; }
  .contato .right{ max-width: 600px; }
  .contato .right .btn-secondary{ background:  #F97300; color: #fff; border:0;}
  .contato .right .form-control::placeholder{ color: #888; font-size: 16px; }
        </style>
        
    </head>
    <body>
      <header>
        <nav class="navbar navbar-expand-lg navbar-dark fixed-top">
      <a class="navbar-brand" href="#">ID Websistemas</a>
       <button class="navbar-toggler" type="button" data-toggle="collapse" 
      data-target="#links-topo" aria-controls="links-topo" aria-expanded="false">  
      <span class="navbar-toggler-icon"></span>
  </button>
      <div class="collapse navbar-collapse" id=" links-topo">     
          <ul class="navbar-nav mr-4">
              <li class="nav-item">
                  <a class="nav-link" href="#">Quem somos</a>        
              </li>
              <li class="nav-item">
                  <a class="nav-link" href="#">Portfolio</a>
              </li>
              <li class="nav-item">
                  <a class="nav-link" href="#">Notícias</a>
              </li>
              <li class="nav-item">
                  <a class="nav-link" href="#">Time</a>
              </li>
              <li class="nav-item">
                  <a class="nav-link" href="#">Contato</a>
              </li>
          </ul>
      </div>
  </nav>
      </header>
        <main>
            @RenderBody()
        </main>
        <script src="~/lib/jquery/dist/jquery.min.js"></script>
        <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
        <script src="~/js/site.js" asp-append-version="true"></script>
        @RenderSection("Scripts", required: false)
    </body>
  </html>